{{#partial "title" }}
    Create a squad!
{{/partial}}

<!--form.hbs.-->
{{#partial "content"}}
    <h1>Create Your Squad!</h1>
    <form action='/herosquad'>
        <div class="form-group">
            <label for="squad">Squad Name</label>
            <input id="squad" name="squad" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="cause">Squad Cause</label>
            <input id="cause" name="cause" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="members">Number of Members</label>
            <input id="members" name="members" class="form-control" type="number">
        </div>
        <button type="submit" class="btn">Go!</button>
    </form>
    <!--form.hbs.-->
{{/partial}}

